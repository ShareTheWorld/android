<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_offlinemap"
     >

    <TextView
        android:id="@+id/tv_currentcity"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|left"
        android:text="@string/msg_currcity"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_currcity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tv_currentcity"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_currentcity"
        android:text="南京"
        android:textSize="30dp" />

    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_below="@+id/tv_currentcity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </android.support.v4.app.FragmentTabHost>
</RelativeLayout>